<resources>

    <!-- Base application theme. -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/darkblue</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CheckOutTheme" parent="ActionBarTheme.NoActionBar">
        <item name="android:textColor">@color/darkblue</item>
    </style>

    <style name="UserFragment" parent="ActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ProductItemThem" parent="ActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@drawable/app_bg</item>
    </style>


    <style name="ActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/app_bg</item>
    </style>

    <style name="ActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


</resources>
