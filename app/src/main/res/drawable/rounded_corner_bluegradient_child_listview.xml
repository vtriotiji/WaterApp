<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient android:angle="45" android:centerColor="#6AB4F4" android:endColor="#6AB4F4" android:gradientRadius="90" android:startColor="#6AB4F4" android:type="linear" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
            <!--apply a border around button-->
            <stroke android:width="1dp" android:color="#6AB4F4" />
            <!-- make the button corners rounded-->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>